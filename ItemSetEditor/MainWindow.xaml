<Window x:Class="ItemSetEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemSetEditor"
        mc:Ignorable="d"
        Title="Item Set Editor (Beta)" Height="600" Width="1200" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="templateHorizontal">
            <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="templateWrap">
            <WrapPanel FlowDirection="LeftToRight" IsItemsHost="true" />
        </ItemsPanelTemplate>
        <DataTemplate x:Key="item">
            <Image Margin="5" Tag="{Binding}" Width="48" Height="48" MouseLeftButtonDown="Image_MouseLeftButtonDown" >
                <Image.Source>
                    <CroppedBitmap Source="{Binding image.AbsolutePath}" SourceRect="{Binding image.SourceRect}" />
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate x:Key="itemSelect">
            <Image Margin="5" Tag="{Binding}" Width="48" Height="48" MouseMove="image_MouseMove" ToolTip="{Binding description}" >
                <Image.Source>
                    <CroppedBitmap Source="{Binding image.AbsolutePath}" SourceRect="{Binding image.SourceRect}" />
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate x:Key="championIcon">
            <Image Tag="{Binding}" Width="48" Height="48" MouseLeftButtonDown="ChampionRemove_MouseLeftButtonDown" >
                <Image.Source>
                    <CroppedBitmap Source="{Binding image.AbsolutePath}" SourceRect="{Binding image.SourceRect}" />
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate x:Key="championSelect">
            <StackPanel Width="100" Orientation="Horizontal">
                <Image Tag="{Binding}" Width="24" Height="24" MouseLeftButtonDown="ChampionAdd_MouseLeftButtonDown" >
                    <Image.Source>
                        <CroppedBitmap Source="{Binding image.AbsolutePath}" SourceRect="{Binding image.SourceRect}" />
                    </Image.Source>
                </Image>
                <TextBlock Text="{Binding name}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="mapSelect">
            <StackPanel Margin="0,0,15,0" Orientation="Horizontal">
                <CheckBox Tag="{Binding MapId}" IsChecked="{Binding IsChecked}" VerticalAlignment="Center" Checked="Map_Checked" Unchecked="Map_Unchecked" />
                <Image Width="48" Height="48" DataContext="{Binding image}">
                    <Image.Source>
                        <CroppedBitmap Source="{Binding AbsolutePath}" SourceRect="{Binding SourceRect}" />
                    </Image.Source>
                </Image>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="itemBlock">
            <Expander Header="{Binding type}" IsExpanded="true" >
                <StackPanel Tag="{Binding}" MouseUp="ItemBlock_MouseUp" >
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <TextBlock Text="Block title: " />
                        <TextBox Tag="{Binding}" Text="{Binding type, Mode=TwoWay}" KeyDown="BlockTitle_KeyDown" />
                        <Button Margin="25,0,0,0" Tag="{Binding}" Content="Delete" Click="DeleteItemBlock_Click" />
                    </StackPanel>
                    <ListView Margin="5" MinHeight="68" ItemsSource="{Binding items}" ItemTemplate="{StaticResource item}" ItemsPanel="{StaticResource templateHorizontal}" />
                </StackPanel>
            </Expander>
        </DataTemplate>
        <DataTemplate x:Key="itemSetList">
            <TextBlock Tag="{Binding}" Text="{Binding title}" MouseLeftButtonDown="ItemSet_MouseLeftButtonDown" />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal">
                <Button Margin="0,0,20,0" Content="Add new ittem set" Click="NewItemSet_Click" />
                <Button Margin="0,0,20,0" Content="Save changes" Click="Save_Click" IsEnabled="{Binding IsChanged}" />
                <Button Margin="0,0,20,0" Content="Undo all" Click="UndoAll_Click" IsEnabled="{Binding IsChanged}" />
                <Button Margin="0,0,20,0" Content="Delete selected item set" Click="DeleteSelected_Click" />
            </StackPanel>
            <ScrollViewer Grid.Row="1" Grid.Column="0">
                <ItemsControl Name="sets" ItemsSource="{Binding ItemSets.itemSets}" ItemTemplate="{StaticResource itemSetList}" />
            </ScrollViewer>
        <StackPanel Name="PanelSelected" Grid.Row="1" Grid.Column="1" DataContext="{Binding Selected}">
            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                <TextBlock Text="Title: " />
                <TextBox Text="{Binding title}" KeyDown="Title_KeyDown" />
            </StackPanel>
            <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding MapIds}" ItemTemplate="{StaticResource mapSelect}" ItemsPanel="{StaticResource templateHorizontal}" />
            <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding Champions}" ItemTemplate="{StaticResource championIcon}" ItemsPanel="{StaticResource templateHorizontal}" />
            <TextBlock Margin="0,10,0,0" Text="Item blocks:" />
            <ItemsControl Margin="0,0,0,15" ItemsSource="{Binding blocks}" ItemTemplate="{StaticResource itemBlock}" />
            <Button Content="New item block" Click="NewItemBlock_Click" HorizontalAlignment="Left" />
        </StackPanel>
        <TabControl Grid.Row="1" Grid.Column="2">
            <TabItem Header="Items">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Items.data.Values}" ItemTemplate="{StaticResource itemSelect}" ItemsPanel="{StaticResource templateWrap}" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Champions">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Champions.data.Values}" ItemTemplate="{StaticResource championSelect}" ItemsPanel="{StaticResource templateWrap}" />
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Image Name="drag" Visibility="Collapsed" Width="48" Height="48" VerticalAlignment="Top" HorizontalAlignment="Left" IsHitTestVisible="False" Grid.ColumnSpan="3" Grid.RowSpan="2" />
    </Grid>
</Window>
