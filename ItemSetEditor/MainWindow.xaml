<Window x:Class="ItemSetEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemSetEditor"
        mc:Ignorable="d"
        Title="Item Set Editor (Beta)" Height="600" Width="1200" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="templateHorizontal">
            <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
        <DataTemplate x:Key="item">
            <Image Width="48" Height="48" DataContext="{Binding image}">
                <Image.Source>
                    <CroppedBitmap Source="{Binding AbsolutePath}" SourceRect="{Binding SourceRect}" />
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate x:Key="championId">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="championIcon">
            <Image Width="48" Height="48" DataContext="{Binding image}">
                <Image.Source>
                    <CroppedBitmap Source="{Binding AbsolutePath}" SourceRect="{Binding SourceRect}" />
                </Image.Source>
            </Image>
        </DataTemplate>
        <DataTemplate x:Key="mapId">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,0,10,0" Text="{Binding}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="mapSelect">
            <StackPanel Margin="0,0,15,0" Orientation="Horizontal">
                <CheckBox Tag="{Binding MapId}" IsChecked="{Binding IsChecked}" VerticalAlignment="Center" Checked="Map_Checked" Unchecked="Map_Unchecked" />
                <Image Width="48" Height="48" DataContext="{Binding image}">
                    <Image.Source>
                        <CroppedBitmap Source="{Binding AbsolutePath}" SourceRect="{Binding SourceRect}" />
                    </Image.Source>
                </Image>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="itemBlock">
            <StackPanel>
                <!--<TextBlock Text="{Binding type, StringFormat=Type: {0} }" />-->
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <TextBlock Text="Block title: " />
                    <TextBox Tag="{Binding}" Text="{Binding type, Mode=TwoWay}" KeyDown="BlockTitle_KeyDown" />
                    <Button Margin="25,0,0,0" Tag="{Binding}" Content="Delete" Click="DeleteItemBlock_Click" />
                </StackPanel>
                <ListView Margin="5" ItemsSource="{Binding items}" ItemTemplate="{StaticResource item}" ItemsPanel="{StaticResource templateHorizontal}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="itemSetList">
            <TextBlock Tag="{Binding}" Text="{Binding title}" MouseLeftButtonDown="ItemSet_MouseLeftButtonDown" />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal">
            <Button Margin="0,0,20,0" Content="Add new ittem set" Click="NewItemSet_Click" />
            <Button Margin="0,0,20,0" Content="Save changes" Click="Save_Click" IsEnabled="{Binding IsChanged}" />
            <Button Margin="0,0,20,0" Content="Undo all" Click="UndoAll_Click" IsEnabled="{Binding IsChanged}" />
            <Button Margin="0,0,20,0" Content="Delete selected item set" Click="DeleteSelected_Click" />
        </StackPanel>
        <ScrollViewer Grid.Row="1" Grid.Column="0">
            <ItemsControl Name="sets" ItemsSource="{Binding ItemSets.itemSets}" ItemTemplate="{StaticResource itemSetList}" />
        </ScrollViewer>
        <StackPanel Name="PanelSelected" Grid.Row="1" Grid.Column="1" DataContext="{Binding Selected}">
            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                <TextBlock Text="Title: " />
                <TextBox Text="{Binding title}" KeyDown="Title_KeyDown" />
            </StackPanel>
            <!--<TextBlock Text="{Binding map, StringFormat=Map: {0} }"  />
            <TextBlock Text="{Binding mode, StringFormat=Mode: {0} }" />
            <TextBlock Text="{Binding type, StringFormat=Type: {0} }" />
            <TextBlock Text="{Binding uid, StringFormat=UID: {0} }" />
            <TextBlock Text="{Binding sortrank, StringFormat=Sortrank: {0} }" />
            <TextBlock Text="{Binding priority, StringFormat=Priority: {0} }" />
            <TextBlock Text="{Binding isGlobalForMaps, StringFormat=Is global for maps: {0} }" />-->
            <ItemsControl ItemsSource="{Binding MapIds}" ItemTemplate="{StaticResource mapSelect}" ItemsPanel="{StaticResource templateHorizontal}" />
            <!--<ItemsControl ItemsSource="{Binding associatedMaps}" ItemTemplate="{StaticResource mapId}" ItemsPanel="{StaticResource templateHorizontal}" />-->
            <TextBlock Text="{Binding isGlobalForChampions, StringFormat=Is global for champions: {0} }" />
            <ItemsControl ItemsSource="{Binding Champions}" ItemTemplate="{StaticResource championIcon}" ItemsPanel="{StaticResource templateHorizontal}" />
            <ItemsControl ItemsSource="{Binding associatedChampions}" ItemTemplate="{StaticResource championId}" ItemsPanel="{StaticResource templateHorizontal}" />
            <TextBlock Margin="0,10,0,0" Text="Item blocks:" />
            <ItemsControl Margin="0,0,0,15" ItemsSource="{Binding blocks}" ItemTemplate="{StaticResource itemBlock}" />
            <Button Content="New item block" Click="NewItemBlock_Click" HorizontalAlignment="Left" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2">

        </StackPanel>
    </Grid>
</Window>
