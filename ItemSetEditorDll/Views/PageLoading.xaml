<Page x:Class="ItemSetEditor.PageLoading"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItemSetEditor"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" Unloaded="Page_Unloaded">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Label Content="{Binding ProgressText, FallbackValue=Loading...}" HorizontalContentAlignment="Center" FontSize="26" Margin="0,0,0,15" />
            <ProgressBar IsIndeterminate="True" Width="200" Height="20" />
        </StackPanel>
    </Grid>
</Page>
